@model IEnumerable<TestePraticoMvc.Models.Pessoa>

@{
    ViewBag.Title = "Lista de Pessoas";
}



<div class="d-flex justify-content-between mb-4">
    <h3 class="mb-6">Lista de Pessoas</h3>
    <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Nova Pessoa", "Create")</button>
</div>
<table class="table table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rg)
        </th>
        <th class="text-center">Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td class="text-center">
                <span class="btn btn-info text-sm">@Html.ActionLink("Visualizar", "Details", new { id = item.Id })</span>
                <span class="btn btn-warning text-sm">@Html.ActionLink("Editar", "Edit", new { id = item.Id }) </span>
                <span class="btn btn-danger text-sm">@Html.ActionLink("Deletar", "Delete", new { id = item.Id }) </span>
            </td>
        </tr>
    }

</table>
