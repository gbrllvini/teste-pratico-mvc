﻿@model TestePraticoMvc.Models.Pessoa

@{
    ViewBag.Title = "Cadastrar nova pessoa";
}



<a href="/pessoas/index" class="my-auto"><i class="fas fa-arrow-left"></i></a>
<h2 class="text-center p-2 mt-2 bg-success text-white round-1 shadow-sm">Cadastrar nova pessoa</h2>

<section class="mt-5">
    <form class="row" data-bind="submit: createPessoa">
        <div class="col-12 col-md-3 mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input id="nome" required="required" type="text" class="form-control text-capitalize" placeholder="Digite" data-bind="value: nome">
        </div>
        <div class="col-12 col-md-3 mb-3">
            <label for="sobrenome" class="form-label">Sobrenome:</label>
            <input id="sobrenome" required="required" type="text" class="form-control text-capitalize" placeholder="Digite" data-bind="value: sobrenome">
        </div>
        <div class="col-12 col-md-3 mb-3">
            <label for="dataNascimento" class="form-label">Data de Nascimento:</label>
            <input id="dataNascimento" required="required" type="date" class="form-control" data-bind="value: dataNascimento">
        </div>
        <div class="col-12 col-md-3 mb-3">
            <label for="estadoCivil" class="form-label">Estado Civil:</label>
            <select id="estadoCivil" class="form-select" required="required" data-bind="value: estadoCivil" placeholder="Selecione">
                <option value="Solteiro(a)">Solteiro(a)</option>
                <option value="Casado(a)">Casado(a)</option>
                <option value="Divorciado(a)">Divorciado(a)</option>
                <option value="Viuvo(a)">Viúvo(a)</option>
            </select>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <label for="cpf" class="form-label">CPF:</label>
            <input id="cpf" required="required" type="text" class="form-control" maxlength="14" placeholder="Apenas CPF válido." data-bind="value: cpf">
        </div>
        <div class="col-12 col-md-3 mb-3">
            <label for="rg" class="form-label">RG:</label>
            <input id="rg" required="required" type="text" class="form-control" maxlength="12" placeholder="Apenas RG válido" data-bind="value: rg">
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-success fw-bold shadow-sm">Cadastrar</button>
        </div>
    </form>
</section>